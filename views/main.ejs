<%- include('partials/header.ejs'); -%>
<!--form to create a new user acc with email, name, pw-->
<% if (locals.newChecker) {%>
  <div class="col-md-10 mx-auto col-lg-5 mt-3">
    <form class="p-4 p-md-5 border rounded-3 bg-body-tertiary sign" method="post" action="/signup">
      <!--login errors are shown here (if any)-->
      <% if (locals.loginError) { %>
        <p class="error"><%= loginError %></p>
       <% } %>
      <div class="form-floating mb-3">
        <input type="email" class="form-control" name="email" id="floatingInput" placeholder="name@example.com" required>
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" name='name' id="floatingInput" placeholder="name@example.com" required>
        <label for="floatingInput">Name</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" name='pw1' class="form-control" id="floatingPassword" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*]).{6,}" required>
        <label for="floatingPassword">Password*</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" name="pw2" class="form-control" id="floatingPassword" placeholder="Password" required>
        <label for="floatingPassword">Confirm Password*</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up**</button>
      <hr class="my-2">
      <small class="text-body-secondary">* Password must have at least six characters, one uppercase letter, one lowercase letter, one digit, and one special character.</small>
      <hr class="my-2">
      <small class="text-body-secondary">** By clicking Sign up, you agree to the terms of use.</small>
    </form>
  </div>
<!--main page with option to login-->
<% } else { %>
  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start ">
        <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">Welcome to MyShow!</h1>
        <p class="col-lg-10 fs-4">Here you may browse through all of the world's favourite TV shows. Add them to your lists and rate! <br> Log in to view your catalogues</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <!--login form with email + pw fields + error msg(if any)-->
      <% if (!locals.currentUser || currentUser[0] == 'nope') { %>
        <form class="p-4 p-md-5 border rounded-3 bg-body-tertiary sign" method="post" action="/login">
          <% if (locals.loginError) { %>
            <p class="error"><%= loginError %></p>
           <% } %>
          <div class="form-floating mb-3">
            <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" name="pw" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
          <button class="w-100 btn btn-lg btn-primary my-3" type="submit">Log in</button>
          <a href="/addprofile" class="text-body-secondary">Create new profile</a>
          <hr class="my-4">
          <small class="text-body-secondary">By clicking Log in, you agree to the terms of use.</small>
        </form>
      <% } else {%>
        <!--log out button if the user is already logged in-->
        <form class="p-4 p-md-5 border rounded-3 bg-body-tertiary sign" method="get" action="/logout">
          <button class="w-100 btn btn-lg btn-primary my-3" type="submit">Log out</button>
        </form>
      <% } %>
      </div>
    </div>
  </div>
<% } %>
<%- include('partials/footer.ejs'); -%>
